<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/color_question_page_background">
    <TextView
        android:id="@+id/txtQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/short_question_size"
        android:text="How many condensate pumps are running?"
        android:padding="@dimen/abc_text_size_large_material"/>
    <TextView
        android:id="@+id/txtNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/navigation_help"/>

</LinearLayout>